<% layout("/layout/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>
    <form
      method="POST"
      action="/listings/<%=newData._id%>/edit?_method=PATCH"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="md-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          value="<%=newData.title %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter the title</div>
      </div>
      <br />
      <div class="md-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required>
<%=newData.description %></textarea
        >
        <!--form control se input wala lamba hoga-->
        <div class="invalid-feedback">Describe Your Place</div>
      </div>
      <br />

      <div class="row row-cols-lg-3 mt-1 mb-3">
        <img src="<%= newData.image.url %>" />
      </div>

      <div class="md-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input name="listing[image]" type="file" class="form-control" />
        <div class="invalid-feedback">Image Url/Link</div>
      </div>
      <br />

      <div class="md-3">
        <label for="price" class="form-label">Price</label>
        <input
          name="listing[price]"
          value="<%=newData.price %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter the price</div>
      </div>
      <br />

      <div class="md-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          value="<%=newData.location%>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter the location</div>
      </div>
      <br />

      <div class="md-3">
        <label for="country" class="form-label">Country</label>
        <input
          name="listing[country]"
          value="<%=newData.country%>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter the country</div>
      </div>

      <button class="btn btn-dark mt-3 mb-3">Edit</button>
    </form>
  </div>
</div>
<script src="/js/script.js"></script>
