<% layout("/layout/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <br />
    <h3>Create Listing</h3>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <!--Default browser wali validation error ko bnd kr dega-->

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">enter the title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="write description"
          type="text"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please describe your place</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input name="listing[image]" type="file" class="form-control" required />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="Price"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter your valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            placeholder="enter location"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter the location</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          name="listing[country]"
          placeholder="enter country"
          type="text"
          class="form-control"
          required
        />
        <!--form control input wala ko almba kr deta hain-->
        <div class="invalid-feedback">Enter the country</div>
      </div>

      <button class="btn btn-dark">Add</button>
      <br /><br />
    </form>
  </div>
</div>
