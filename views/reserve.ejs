<% layout("/layout/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3 class="mt-3"><b><%= listing.title %></b></h3>
    <div class="card col-12 show-card card-listings">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <p class="card-text">
        <i><strong>Owner: <%=listing.owner.username %></strong></i>
      </p>
    </div>

    <h3>Price details</h3>
    <div class="mb-3">
      <ul>
        <li>
          <p>&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</p>
        </li>
        <li>
          <p>Cleaning fee : &#8377;350</p>
        </li>
        <li>
          <p>Wanderlust service fee : &#8377;500</p>
        </li>
      </ul>
    </div>
    <hr />
    <div class="border col-8 offset-1 mb-2">
      <div class="col-8 offset-2 mb-2">
        <h3>Customer Details</h3>
        <form
          method="GET"
          action="/booking"
          novalidate
          class="needs-validation"
        >
          <!--Default browser wali validation error ko bnd kr dega-->

          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input name="name" type="text" class="form-control" required />

            <div class="invalid-feedback">enter the name</div>
          </div>
          <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input name="email" type="text" class="form-control" required />
            <div class="invalid-feedback"></div>
          </div>

          <div class="mb-3">
            <label for="contact" class="form-label">contact</label>
            <input name="contact" type="text" class="form-control" required />
            <div class="invalid-feedback"></div>
          </div>

          <div class="mb-3">
            <label for="gender" class="form-label">gender</label>
            <input name="gender" type="text" class="form-control" required />
          </div>

          <div class="mb-3">
            <label for="no of guest" class="form-label">No of Guest</label>
            <input
              name="no of guest"
              type="number"
              class="form-control"
              required
            />
          </div>

          <div class="row">
            <div class="mb-3 col-md-6">
              <label for="check in" class="form-label">Check In</label>
              <input
                name="check in"
                type="date"
                class="form-control"
                required
              />
            </div>

            <div class="mb-3 col-md-6">
              <label for="Check Out" class="form-label">Check Out</label>
              <input
                name="Check Out"
                type="date"
                class="form-control"
                required
              />
            </div>
          </div>

          <button class="btn btn-dark">Book</button>
          <br /><br />
        </form>
      </div>
    </div>
  </div>
</div>
